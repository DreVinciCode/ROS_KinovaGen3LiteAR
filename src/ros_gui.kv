	MDLabel:
		id: Horizontal_Position
		text: "Horizontal Position:"
	    pos_hint: {"center_x": 0.9, "center_y": 0.5}
		size_hint: 1,1
	
	MDLabel:
		id: Horizontal_Position_value_text
		text: "Value"
	    pos_hint: {"center_x": 1.1, "center_y": 0.5}
		size_hint: 1,1

	MDRaisedButton:
	    text: "+"
	    md_bg_color: 0, 0, 1, 0.5
	    pos_hint: {"center_x": 0.2, "center_y": 0.5}
	    on_press: app.horizontal_control_positive(*args)

	MDRaisedButton:
	    text: "-"
	    md_bg_color: 0, 0, 1, 0.5
	    pos_hint: {"center_x": 0.3, "center_y": 0.5}
	    on_press: app.horizontal_control_negative(*args)


	MDLabel:
		id: Vertical_Position
		text: "Vertical Position:"
	    pos_hint: {"center_x": 0.9, "center_y": 0.6}
