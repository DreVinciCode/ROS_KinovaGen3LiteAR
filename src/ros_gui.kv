	MDLabel:
		id: Hand_Position
		text: "Source Cup Position"
	    pos_hint: {"center_x": 0.9, "center_y": 0.5}
		size_hint: 1,1
	
	# MDLabel:
	# 	id: Horizontal_Position_value_text
	# 	text: "Value"
	#     pos_hint: {"center_x": 1.1, "center_y": 0.5}
	# 	size_hint: 1,1

	MDRaisedButton:
	    text: "Left"
	    md_bg_color: 0, 0, 0.8, 0.5
	    pos_hint: {"center_x": 0.19, "center_y": 0.5}
	    on_press: app.horizontal_control_positive(*args)

	MDRaisedButton:
	    text: "Right"
	    md_bg_color: 0, 0, 0.8, 0.5
	    pos_hint: {"center_x": 0.33, "center_y": 0.5}
	    on_press: app.horizontal_control_negative(*args)


	# MDLabel:
	# 	id: Vertical_Position
	# 	text: "Vertical Position:"
	#     pos_hint: {"center_x": 0.9, "center_y": 0.6}
	# 	size_hint: 1,1
	
	# MDLabel:
	# 	id: Vertical_Position_value_text
	# 	text: "Value"
	#     pos_hint: {"center_x": 1.1, "center_y": 0.6}
	# 	size_hint: 1,1

	MDRaisedButton:
	    text: "Up"
	    md_bg_color: 0, 0, 0.8, 0.5
	    pos_hint: {"center_x": 0.26, "center_y": 0.6}
	    on_press: app.vertical_control_positive(*args)

	MDRaisedButton:
	    text: "Down"
	    md_bg_color: 0, 0, 0.8, 0.5
	    pos_hint: {"center_x": 0.26, "center_y": 0.4}
	    on_press: app.vertical_control_negative(*args)

	MDLabel:
		id: Tile_angle
		text: "Tilt Limit:"
	    pos_hint: {"center_x": 0.9, "center_y": 0.7}
		size_hint: 1,1
	
	MDLabel:
		id: Tile_angle_value_text
		text: "Value"
	    pos_hint: {"center_x": 1.1, "center_y": 0.7}
		size_hint: 1,1

	MDRaisedButton:
	    text: "+"
		font_size: '24sp'
	    md_bg_color: 0, 0, 1, 0.5
	    pos_hint: {"center_x": 0.2, "center_y": 0.7}
	    on_press: app.tilt_angle_control_positive(*args)

	MDRaisedButton:
	    text: "-"
		font_size: '24sp'
	    md_bg_color: 0, 0, 1, 0.5
	    pos_hint: {"center_x": 0.32, "center_y": 0.7}
	    on_press: app.tilt_angle_control_negative(*args)

	MDLabel:
		id: Max_Velocity 
		text: "Rotational Velocity:"
	    pos_hint: {"center_x": 0.9, "center_y": 0.8}
		size_hint: 1,1
	
	MDLabel:
		id: Max_Velocity_value_text
		text: "Value"
	    pos_hint: {"center_x": 1.1, "center_y": 0.8}
		size_hint: 1,1

	MDRaisedButton:
	    text: "+"
		font_size: '24sp'
	    md_bg_color: 0, 0, 1, 0.5
	    pos_hint: {"center_x": 0.2, "center_y": 0.8}
	    on_press: app.max_vel_control_positive(*args)

	MDRaisedButton:
	    text: "-"
		font_size: '24sp'
	    md_bg_color: 0, 0, 1, 0.5
	    pos_hint: {"center_x": 0.32, "center_y": 0.8}
	    on_press: app.max_vel_control_negative(*args)

	MDRaisedButton:
	    text: "Execute Pour"
		font_size: '24sp'
	    md_bg_color: 0, 0, 1, 0.5
		size_hint: (0.2, 0.1)
	    pos_hint: {"center_x": 0.5, "center_y": 0.2}
	    on_press: app.execute_pour_action(*args)